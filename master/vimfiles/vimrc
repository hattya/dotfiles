  let g:quickrun_config = {
  \  '_': {
  \    'outputter/buffer/running_mark': 'ðŸŒ ',
  \    'outputter/buffer_legacy/running_mark': 'ðŸŒ ',
  \    'runner/vimproc/updatetime': 40,
  \  },
  \  'python.test': {
  \    'command': 'python',
  \    'exec': '%c -B -m unittest discover -s %s:h -p %s:t',
