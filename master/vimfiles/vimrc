" terminal options {{{2
if has('vim_starting')
  " change cursor style {{{3
  if &term =~# '^\%(xterm\|screen\)'
    let &t_SI .= "\e[5 q"
    let &t_SR .= "\e[3 q"
    let &t_EI .= "\e[1 q"
  endif
  " change terminal title {{{3
  if &term =~# '^screen' 
    let &t_ts = "\e_"
    let &t_fs = "\e\\"
  endif
  " bracketed paste mode {{{3
  if has('patch-8.0.0238')
    if &term =~# '^screen'
      let &t_BE = "\e[?2004h"
      let &t_BD = "\e[?2004l"
      let &t_PS = "\e[200~"
      let &t_PE = "\e[201~"
    endif
  else
    if has('patch-8.0.0210')
      set t_BE=
    endif
    if &term =~# '^\%(xterm\|screen\)'
      let &pastetoggle = "\e[201~"
      let &t_ti .= "\e[?2004h"
      let &t_te .= "\e[?2004l"

      noremap  <expr> <Esc>[200~ <SID>bracketed_paste_mode('i')
      inoremap <expr> <Esc>[200~ <SID>bracketed_paste_mode('')
      vnoremap <expr> <Esc>[200~ <SID>bracketed_paste_mode('c')
      cnoremap        <Esc>[200~ <Nop>
      cnoremap        <Esc>[201~ <Nop>

      function! s:bracketed_paste_mode(rv) abort
        set paste
        return a:rv
      endfunction
    endif
  endif
  " improve vsplit {{{3
  if &term =~# '^xterm'
    let &t_RV .= "\e[?6;69h\e[1;3s\e[3;9H\e[6n\e[0;0s\e[?6;69l"

    noremap <expr> <Esc>[3;3R <SID>vsplit_mode()

    function! s:vsplit_mode() abort
      " enable origin mode and left/right margins
      let &t_CS  = "y"
      let &t_CV  = "\e[%i%p1%d;%p2%ds"
      let &t_ti .= "\e[?6;69h"
      let &t_te  = "\e[?6;69l\e[999H" . &t_te
      call writefile(["\e[?6;69h"], '/dev/tty', 'a')
    endfunction
  endif
  " }}}3
endif

